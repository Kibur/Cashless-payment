<UserControl x:Class="nmct.ba.cashlessproject.View.Klant.RegistratieFormulier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Registratie formulier" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>
        <TextBlock Text="Kaart nummer:" Grid.Row="1" Grid.Column="0"/>
        <TextBox Name="txtKaartNummer" Grid.Row="1" Grid.Column="1" Height="20" Margin="5" IsReadOnly="True"/>
        <TextBlock Text="Scan uw identiteitskaart a.u.b." Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Button Name="btnScan" Content="Scan" Margin="5" Height="20" Width="60" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>
        <Image Name="imgProfiel" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" Width="120" Height="130"/>
        <TextBlock Text="Naam:" Grid.Row="5" Grid.Column="0"/>
        <TextBox Name="txtNaam" Grid.Row="5" Grid.Column="1" Height="20" Margin="5"/>
        <TextBlock Text="Voornaam:" Grid.Row="6" Grid.Column="0"/>
        <TextBox Name="txtVoornaam" Grid.Row="6" Grid.Column="1" Height="20" Margin="5"/>
        <TextBlock Text="Geboortedatum:" Grid.Row="7" Grid.Column="0"/>
        <DatePicker Name="dpGeboortedatum" Grid.Row="7" Grid.Column="1" Height="20" Margin="5"/>
        <TextBlock Text="Telefoon:" Grid.Row="8" Grid.Column="0"/>
        <TextBox Name="txtTelefoon" Grid.Row="8" Grid.Column="1" Height="20" Margin="5"/>
        <TextBlock Text="Email:" Grid.Row="9" Grid.Column="0"/>
        <TextBox Name="txtEmail" Grid.Row="9" Grid.Column="1" Height="20" Margin="5"/>
        <Grid Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Name="btnBevistigen" Content="Bevestigen" Grid.Column="0" Height="30" Width="80" Margin="5"/>
            <Button Name="btnAnnuleren" Content="Annuleren" Grid.Column="1" Height="30" Width="80" Margin="5"/>
        </Grid>
    </Grid>
</UserControl>
